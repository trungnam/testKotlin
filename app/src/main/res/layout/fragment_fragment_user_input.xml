<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hydraz.trungnam1992.myapplication.ui.view.FragmentUserInput">

        <TextView
            android:padding="@dimen/normal_padding"
            android:text="@string/question_status"
            android:id="@+id/txtViewQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/txtViewQuestion"
            android:id="@+id/textInputLayoutStatus"
            android:padding="@dimen/small_padding"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:hint="@string/text_hint_share_your_thinking"
                android:layout_width="match_parent"
                android:id="@+id/textInputEditTextStatus"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_centerInParent="true"
            android:id="@+id/btnPostStatus"
            android:enabled="false"
            android:layout_below="@+id/textInputLayoutStatus"
            android:layout_width="wrap_content"
            android:text="@string/text_post_it_now"
            android:layout_height="wrap_content" />

</RelativeLayout>
